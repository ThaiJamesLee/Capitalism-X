<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uni.mannheim.capitalismx.ui.controller.module.finance.FinanceOverviewController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Company">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Cash" />
                  <Label text="Assets" GridPane.rowIndex="1" />
                  <Label text="Liabilities" GridPane.rowIndex="2" />
                  <Label text="Net Worth" GridPane.rowIndex="3" />
                  <Label fx:id="cashLabel" layoutX="10.0" layoutY="107.0" GridPane.columnIndex="1" />
                  <Label fx:id="assetsLabel" layoutX="110.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="liabilitiesLabel" layoutX="10.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="netWorthLabel" layoutX="10.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Label layoutX="10.0" layoutY="10.0" text="Bank">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="10.0" layoutY="147.0" text="Current Loan Amount">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="loanLabel" layoutX="10.0" layoutY="164.0" text="0" />
            <TextField fx:id="loanAmountTextField" promptText="Enter Loan Amount" />
            <AnchorPane>
               <children>
                  <MenuButton fx:id="loanRequestMenuButton" mnemonicParsing="false" text="Request Loan" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <Label layoutX="10.0" layoutY="167.0" text="Investments">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="10.0" layoutY="184.0" text="Real Estate">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="realEstateLabel" layoutX="10.0" layoutY="201.0" text="0" />
            <SplitPane dividerPositions="0.5">
               <items>
                  <TextField fx:id="realEstateTextField" promptText="Enter Amount" />
                  <Button fx:id="realEstateButton" mnemonicParsing="false" text="Buy" />
               </items>
            </SplitPane>
            <Label layoutX="10.0" layoutY="305.0" text="Stocks">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="stocksLabel" layoutX="10.0" layoutY="322.0" text="0" />
            <SplitPane dividerPositions="0.5" layoutX="10.0" layoutY="339.0">
               <items>
                  <TextField fx:id="stocksTextField" promptText="Enter Amount" />
                  <Button fx:id="stocksButton" mnemonicParsing="false" text="Buy" />
               </items>
            </SplitPane>
            <Label layoutX="10.0" layoutY="366.0" text="Venture Capital">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="ventureCapitalLabel" layoutX="10.0" layoutY="383.0" text="0" />
            <SplitPane dividerPositions="0.5" layoutX="10.0" layoutY="400.0">
               <items>
                  <TextField fx:id="ventureCapitalTextField" promptText="Enter Amount" />
                  <Button fx:id="ventureCapitalButton" mnemonicParsing="false" text="Buy" />
               </items>
            </SplitPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
