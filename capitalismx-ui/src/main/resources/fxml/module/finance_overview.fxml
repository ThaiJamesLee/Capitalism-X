            </AnchorPane>
            <Label layoutX="10.0" layoutY="167.0" styleClass="label_large" text="Investments">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="10.0" layoutY="184.0" styleClass="label_large" text="Real Estate">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="realEstateLabel" layoutX="10.0" layoutY="201.0" text="0" />
