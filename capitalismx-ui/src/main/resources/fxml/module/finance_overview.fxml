               <items>
                  <TextField fx:id="stocksTextField" promptText="Enter Amount" />
                  <Button fx:id="stocksButton" mnemonicParsing="false" styleClass="button_module" text="Buy" />
               </items>
            </SplitPane>
            <Label layoutX="10.0" layoutY="366.0" styleClass="label_large" text="Venture Capital">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="ventureCapitalLabel" layoutX="10.0" layoutY="383.0" text="0" />
            <SplitPane dividerPositions="0.5" layoutX="10.0" layoutY="400.0">
               <items>
                  <TextField fx:id="ventureCapitalTextField" promptText="Enter Amount" />
                  <Button fx:id="ventureCapitalButton" mnemonicParsing="false" styleClass="button_module" text="Buy" />
               </items>
            </SplitPane>
         </children>
