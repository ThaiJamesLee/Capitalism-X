            <Label styleClass="label_large" text="Company">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label styleClass="large" text="Cash" />
                  <Label styleClass="large" text="Assets" GridPane.rowIndex="1" />
                  <Label styleClass="large" text="Liabilities" GridPane.rowIndex="2" />
                  <Label styleClass="large" text="Net Worth" GridPane.rowIndex="3" />
                  <Label fx:id="cashLabel" layoutX="10.0" layoutY="107.0" GridPane.columnIndex="1" />
                  <Label fx:id="assetsLabel" layoutX="110.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="liabilitiesLabel" layoutX="10.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="netWorthLabel" layoutX="10.0" layoutY="17.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Label layoutX="10.0" layoutY="10.0" styleClass="label_large" text="Bank">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label layoutX="10.0" layoutY="147.0" styleClass="label_large" text="Current Loan Amount">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="loanLabel" layoutX="10.0" layoutY="164.0" text="0" />
            <TextField fx:id="loanAmountTextField" promptText="Enter Loan Amount" />
            <AnchorPane>
               <children>
                  <Button fx:id="loanRequestButton" mnemonicParsing="false" styleClass="button_module" text="Request Loan" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
