<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uni.mannheim.capitalismx.ui.controller.module.hr.HrStatisticsController">
   <children>
      <VBox spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane hgap="8.0" vgap="12.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints percentHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints percentHeight="25.0" vgrow="SOMETIMES" />
                  <RowConstraints percentHeight="25.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label styleClass="label_large" text="%hr.stats.hiring" wrapText="true" GridPane.rowIndex="4" />
                  <Label styleClass="label_large" text="%hr.stats.firing" wrapText="true" GridPane.rowIndex="5" />
                  <Label fx:id="hiringCost" styleClass="label_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label fx:id="firingCost" styleClass="label_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label styleClass="label_large" text="%hr.stats.capacity" wrapText="true" GridPane.rowIndex="6" />
                  <Label fx:id="hrCapacity" styleClass="label_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Label styleClass="label_large" text="%hr.stats.capacity.hrworker" wrapText="true" GridPane.rowIndex="7" />
                  <Label fx:id="hrWorkerCapacity" styleClass="label_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <Label styleClass="label_large" text="%hr.stats.salary" wrapText="true" GridPane.rowIndex="3" />
                  <Label styleClass="label_large" text="%hr.stats.productivity" wrapText="true" GridPane.rowIndex="2" />
                  <Label styleClass="label_large" text="%hr.stats.satisfaction" wrapText="true" GridPane.rowIndex="1" />
                  <Label styleClass="label_large" text="%hr.stats.employees" wrapText="true" />
                  <Label fx:id="numberEmployeesOverall" styleClass="lael_medium" text="Label" GridPane.columnIndex="1" />
                  <Label fx:id="employeeSatisfactionOverall" styleClass="lael_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="employeeProductivityOverall" styleClass="lael_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="employeeSalariesOverall" styleClass="lael_medium" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../css/general.css" />
      <URL value="@../../css/modul.css" />
   </stylesheets>
</AnchorPane>
