                        <Pane prefHeight="200.0" prefWidth="200.0" styleClass="employee_detail_separator" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                        <Pane prefHeight="200.0" prefWidth="200.0" styleClass="employee_detail_separator" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                        <Button fx:id="trainButton" mnemonicParsing="false" styleClass="button_module" text="Train" GridPane.rowIndex="3" />
                        <Button mnemonicParsing="false" styleClass="button_module" text="Fire" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <fx:include source="../module/employee_table.fxml" />
   </children>
   <stylesheets>
      <URL value="@../../css/general.css" />
