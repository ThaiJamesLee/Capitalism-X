  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <AnchorPane styleClass="employee_detail_background" GridPane.columnIndex="1">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label fx:id="employeeNameLabel" styleClass="header" text="Label" />
                  <GridPane hgap="5.0" vgap="15.0">
                    <columnConstraints>
                      <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="salaryLabel" styleClass="details_label" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="positionLabel" styleClass="details_label" text="Label" GridPane.columnIndex="1" />
                        <Label styleClass="details_label" text="Salary" GridPane.rowIndex="1" />
                        <Label styleClass="details_label" text="Skill" GridPane.rowIndex="2" />
