<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="root" styleClass="list-cell" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane hgap="8.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" percentWidth="35.0" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" percentWidth="15.0" />
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" percentWidth="40.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" percentWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="productName" />
            <Label fx:id="productCount" GridPane.columnIndex="1" />
            <Button fx:id="buyAllComponents" graphicTextGap="8.0" mnemonicParsing="false" styleClass="stock_edit_button" text="%warehouse.buy.components.all" GridPane.columnIndex="2">
            		<graphic>
	                        <FontAwesomeIcon iconName="SHOPPING_CART" size="1.3em" />
	                    </graphic>
            </Button>
            <Button fx:id="discardProducts" mnemonicParsing="false" styleClass="stock_edit_button" GridPane.columnIndex="3">
	                     <graphic>
	                        <FontAwesomeIcon iconName="TRASH" size="1.3em" />
	                     </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </GridPane>
   </children>
</AnchorPane>
