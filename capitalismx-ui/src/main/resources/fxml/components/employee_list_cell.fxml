<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="gridPane" hgap="3.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="8.0" />
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" />
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="8.0" />
    <ColumnConstraints hgrow="SOMETIMES" percentWidth="24.0" />
      <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <FontAwesomeIcon iconName="USER" size="1.5em" />
      <Label fx:id="nameLabel" styleClass="list-label-large" text="Label" GridPane.columnIndex="1">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <FontAwesomeIcon iconName="MONEY" size="1.5em" GridPane.columnIndex="2" />
      <Label fx:id="wageLabel" styleClass="list-label-large" text="Label" GridPane.columnIndex="3">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </Label>
      <AnchorPane fx:id="skillPane" GridPane.columnIndex="4" />
   </children>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</GridPane>
